    <ImageButton
        android:id="@+id/where_to_watch"
        android:padding="0dp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/design_default_color_on_primary"
        android:contentDescription="Onde Assistir"
        android:gravity="center"
        android:src="@drawable/ic_action_watch"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/screen_layout_movie_details"
        app:layout_constraintTop_toBottomOf="@+id/movie_details"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />

