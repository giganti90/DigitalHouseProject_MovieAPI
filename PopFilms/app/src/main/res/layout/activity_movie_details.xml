<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen_layout_movie_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MovieDetailsScreen">


    <ImageView
        android:id="@+id/profilePhoto"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#999"
        android:src="@drawable/bpposter"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="@id/screen_layout_movie_details"
        app:layout_constraintStart_toStartOf="@id/screen_layout_movie_details"
        app:layout_constraintTop_toTopOf="@id/screen_layout_movie_details" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LayoutTwo"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/movie_name"
        app:layout_constraintEnd_toEndOf="@+id/movie_name"
        app:layout_constraintStart_toStartOf="@+id/movie_name"
        app:layout_constraintTop_toBottomOf="@+id/profilePhoto" />

    <TextView
        android:id="@+id/movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingStart="12dp"
        android:text="Black Panther"
        android:textAlignment="viewStart"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/screen_layout_movie_details"
        app:layout_constraintStart_toStartOf="@id/screen_layout_movie_details"
        app:layout_constraintTop_toBottomOf="@id/profilePhoto" />

    <TextView
        android:id="@+id/movie_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:text="2h14min    2018"
        android:textAlignment="viewStart"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/screen_layout_movie_details"
        app:layout_constraintStart_toStartOf="@id/screen_layout_movie_details"
        app:layout_constraintTop_toBottomOf="@id/movie_name" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LayoutThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/movie_details"
        app:layout_constraintEnd_toEndOf="@+id/movie_details"
        app:layout_constraintStart_toStartOf="@+id/movie_details"
        app:layout_constraintTop_toBottomOf="@+id/LayoutTwo" />

    <TextView
        android:id="@+id/movie_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:text="@string/movie_details"
        android:textAlignment="viewStart"
        android:textColor="#000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/screen_layout_movie_details"
        app:layout_constraintStart_toStartOf="@id/screen_layout_movie_details"
        app:layout_constraintTop_toBottomOf="@id/LayoutTwo" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LayoutFour"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/movie_details"
        app:layout_constraintStart_toStartOf="@+id/movie_details"
        app:layout_constraintTop_toBottomOf="@+id/movie_details" />

    <TextView
        android:id="@+id/choose_action"
        android:paddingTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Escolha uma ação:"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/screen_layout_movie_details"
        app:layout_constraintStart_toStartOf="@id/screen_layout_movie_details"
        app:layout_constraintTop_toBottomOf="@id/movie_details" />

    <ImageButton
        android:id="@+id/where_to_watch"
        android:padding="0dp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:backgroundTint="#f7f7f7"
        android:contentDescription="Onde Assistir"
        android:gravity="center"
        android:src="@drawable/ic_action_watch"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/screen_layout_movie_details"
        app:layout_constraintTop_toBottomOf="@+id/movie_details"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />

    <ImageButton
        android:id="@+id/rate"
        android:padding="0dp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:tint="#ffe242"
        android:backgroundTint="#f7f7f7"
        android:contentDescription="Avaliar"
        android:src="@drawable/ic_action_star"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/play_trailer"
        app:layout_constraintStart_toEndOf="@+id/where_to_watch"
        app:layout_constraintTop_toBottomOf="@+id/movie_details"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

    <ImageButton
        android:id="@+id/play_trailer"
        android:padding="0dp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:backgroundTint="#f7f7f7"
        android:contentDescription="Ver Trailer"
        android:gravity="center"
        android:src="@drawable/ic_action_play"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/screen_layout_movie_details"
        app:layout_constraintTop_toBottomOf="@+id/movie_details"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>




