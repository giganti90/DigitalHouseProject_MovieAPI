<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen_movie_rating"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".pack.ui.activity.movies.RatingActivity">


    <ImageView
        android:id="@+id/profilePhoto"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#999"
        android:src="@drawable/bpposter"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="@id/screen_movie_rating"
        app:layout_constraintStart_toStartOf="@id/screen_movie_rating"
        app:layout_constraintTop_toTopOf="@id/screen_movie_rating" />

    <TextView
        android:id="@+id/movie_details_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingStart="12dp"
        android:text="Black Panther"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/screen_movie_rating"
        app:layout_constraintStart_toStartOf="@id/screen_movie_rating"
        app:layout_constraintTop_toBottomOf="@id/profilePhoto" />

    <TextView
        android:id="@+id/movie_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:text="2h14min    2018"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/screen_movie_rating"
        app:layout_constraintStart_toStartOf="@id/screen_movie_rating"
        app:layout_constraintTop_toBottomOf="@id/movie_details_name" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LayoutTwo"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/movie_details_name"
        app:layout_constraintEnd_toEndOf="@+id/movie_details_name"
        app:layout_constraintStart_toStartOf="@+id/movie_details_name"
        app:layout_constraintTop_toBottomOf="@+id/profilePhoto" />



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LayoutThree"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/movie_details"
        app:layout_constraintEnd_toEndOf="@+id/movie_details"
        app:layout_constraintStart_toStartOf="@+id/movie_details"
        app:layout_constraintTop_toBottomOf="@+id/LayoutTwo" />

    <TextView
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center"
        android:id="@+id/movie_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="PopFilm"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/screen_movie_rating"
        app:layout_constraintStart_toStartOf="@id/screen_movie_rating"
        app:layout_constraintTop_toBottomOf="@id/LayoutTwo" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LayoutFour"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/movie_details"
        app:layout_constraintStart_toStartOf="@+id/movie_details"
        app:layout_constraintTop_toBottomOf="@+id/movie_details" />

    <TextView
        android:id="@+id/choose_action"
        android:paddingTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Avalie este filme!"
        android:textAlignment="center"
        android:paddingBottom="12dp"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/screen_movie_rating"
        app:layout_constraintStart_toStartOf="@id/screen_movie_rating"
        app:layout_constraintTop_toBottomOf="@id/movie_details" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTopWave"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"
        android:progressBackgroundTint="#fff"
        android:progressTint="#ffe242"
        android:theme="@style/Widget.AppCompat.RatingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_action" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:text="Confirmar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_action" />

</androidx.constraintlayout.widget.ConstraintLayout>
