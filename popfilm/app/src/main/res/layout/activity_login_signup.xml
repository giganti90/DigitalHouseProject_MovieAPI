<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login_cropped"
    tools:context=".activity.LoginEmailActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="340dp"
        android:layout_height="600dp"
        android:background="@drawable/background_overlay_large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/login_signup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/signup"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/login_signup_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:src="@drawable/ic_action_close"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/closing_overlay_button"/>
        <LinearLayout
            android:id="@+id/login_signup_form_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/login_signup_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_signup_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                app:startIconDrawable="@drawable/ic_action_person"
                app:endIconMode="clear_text"
                android:imeOptions="actionNext"
                android:hint="@string/hint_name">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_signup_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:autofillHints="@string/hint_name"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_signup_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                app:startIconDrawable="@drawable/ic_action_local_phone"
                app:endIconMode="clear_text"
                android:imeOptions="actionNext"
                android:hint="@string/hint_phone">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_signup_phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:autofillHints="@string/hint_phone"
                    android:inputType="phone"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_signup_email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                app:startIconDrawable="@drawable/ic_action_email"
                app:endIconMode="clear_text"
                android:imeOptions="actionNext"
                android:hint="@string/hint_email">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_signup_email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:autofillHints="@string/hint_email"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_signup_paswword_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true"
                android:imeOptions="actionDone"
                android:hint="@string/label_password">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_signup_pasword_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:autofillHints="@string/label_password"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <CheckBox
            android:id="@+id/login_signup_tos_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/form_acceptance"
            app:layout_constraintTop_toBottomOf="@id/login_signup_form_layout"
            app:layout_constraintStart_toStartOf="@id/login_signup_form_layout"/>
        <Button
            android:id="@+id/login_signup_submit_btn"
            android:layout_width="@dimen/btn_width"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/login_signup_tos_checkbox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/login_signup_form"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>